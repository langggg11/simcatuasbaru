<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ikuti Kegiatan"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <ImageView
                android:id="@+id/btnClose"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_close"
                android:padding="4dp"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

        <!-- Kegiatan -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kegiatan"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:fontFamily="sans-serif" />

        <TextView
            android:id="@+id/tvScheduleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Turnamen Catur Bulanan"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

        <!-- Waktu -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Waktu"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:fontFamily="sans-serif" />

        <TextView
            android:id="@+id/tvDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="22 Desember 2025 â€¢ 09:00 - 17:00"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:fontFamily="sans-serif" />

        <!-- Lokasi -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Lokasi"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:fontFamily="sans-serif" />

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Aula Utama"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:fontFamily="sans-serif" />

        <!-- Deskripsi -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Deskripsi"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:fontFamily="sans-serif" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Turnamen catur bulanan untuk semua anggota UKM"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:fontFamily="sans-serif" />

        <!-- Peserta Terdaftar -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Peserta Terdaftar"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:fontFamily="sans-serif" />

        <TextView
            android:id="@+id/tvParticipants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="24 / 32 orang"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:fontFamily="sans-serif" />

        <!-- Warning Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Pastikan Anda dapat hadir pada waktu yang telah ditentukan."
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:fontFamily="sans-serif"
            android:gravity="center" />

        <!-- Confirm Button -->
        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_button_primary"
            android:text="Konfirmasi Ikuti"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>

</androidx.cardview.widget.CardView>