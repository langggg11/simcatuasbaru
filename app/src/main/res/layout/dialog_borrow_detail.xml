<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Detail Peminjaman"
                    android:textColor="@color/text_primary"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

                <ImageView
                    android:id="@+id/btnClose"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_close"
                    android:padding="4dp"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>

            <!-- Status -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:fontFamily="sans-serif" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Dipinjam"
                android:textColor="#FFC107"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <!-- Peminjam -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Peminjam"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:fontFamily="sans-serif" />

            <TextView
                android:id="@+id/tvBorrower"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Ahmad Zaki"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:fontFamily="sans-serif" />

            <!-- Peralatan -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Peralatan"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:fontFamily="sans-serif" />

            <TextView
                android:id="@+id/tvEquipment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Papan Catur Standar"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:fontFamily="sans-serif" />

            <!-- Jumlah -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Jumlah"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:fontFamily="sans-serif" />

            <TextView
                android:id="@+id/tvQuantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="1 unit"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:fontFamily="sans-serif" />

            <!-- Tanggal Pinjam -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Tanggal Pinjam"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:fontFamily="sans-serif" />

            <TextView
                android:id="@+id/tvBorrowDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="20 Desember 2025"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:fontFamily="sans-serif" />

            <!-- Tanggal Dikembalikan (Optional) -->
            <LinearLayout
                android:id="@+id/layoutReturnDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Tanggal Dikembalikan"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:id="@+id/tvReturnDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="19 Desember 2025"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif" />

                <!-- Penerima Barang -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Penerima Barang"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:id="@+id/tvReceiver"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Ahmad Zaki"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif" />

            </LinearLayout>

            <!-- Close Button -->
            <Button
                android:id="@+id/btnOk"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/bg_button_primary"
                android:text="Tutup"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

    </ScrollView>

</androidx.cardview.widget.CardView>